<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_bubble_receive">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/contentLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter">

        <ImageView
            android:id="@+id/userCardPortraitImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="6dp"
            android:src="@mipmap/avatar_def" />

        <TextView
            android:id="@+id/userCardNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/userCardPortraitImageView"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/userCardPortraitImageView"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="用用户名用户名用户名用户名用户名用户名用户名用户名户名"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/userCardPortraitImageView"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@id/userCardPortraitImageView"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="wfchat_id"
            android:textSize="12sp" />

        <View
            android:id="@+id/dividerLine"
            style="@style/Line"
            android:layout_width="210dp"
            android:layout_height="0.5px"
            android:layout_below="@id/userCardPortraitImageView"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/cardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dividerLine"
            android:maxLines="1"
            android:text="@string/user_card"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contentLayout2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter">

        <ImageView
            android:id="@+id/userCardPortraitImageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="6dp"
            android:src="@mipmap/avatar_def" />

        <TextView
            android:id="@+id/userCardNameTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/userCardPortraitImageView2"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/userCardPortraitImageView2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="用用户名用户名用户名用户名用户名用户名用户名用户名户名"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_below="@id/userCardPortraitImageView2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="用用户名用户名用户名用户名用户名用户名用户名用户名户名"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/theme"
            android:layout_marginTop="6dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/content"
            android:src="@mipmap/avatar_def" />

        <View
            android:id="@+id/dividerLine2"
            style="@style/Line"
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_below="@id/theme"
            android:layout_marginTop="6dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="6dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/dividerLine2">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_litapp" />

            <TextView
                android:id="@+id/cardType2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:maxLines="1"
                android:text="@string/litapp_card"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
